// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  TEACHER
  ADMIN
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum PaymentMethod {
  BKASH
  ROCKET
  CARD
  CASH
}

enum CourseType {
  ONLINE
  OFFLINE
  HYBRID
}

enum CourseClass {
  FIVE
  SIX
  SEVEN
  EIGHT
  NINE
  TEN
  ELEVEN
  TWELVE
  MODEL_TEST
  ADMISSION
  OTHER
}

enum PriceType {
  PAID
  FREE
}

enum EnrollmentStatus {
  ACTIVE
  COMPLETED
  CANCELLED
  SUSPENDED
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  password      String
  name          String
  phone         String?
  role          UserRole  @default(STUDENT)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  studentProfile StudentProfile?
  teacherProfile TeacherProfile?
  enrollments    Enrollment[]
  payments       Payment[]
  messagesSent   Message[] @relation("SenderMessages")
  messagesReceived Message[] @relation("ReceiverMessages")
  notifications  Notification[]

  @@index([role])
  @@map("users")
}

model StudentProfile {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique @db.ObjectId
  studentId String?  @unique
  address   String?
  guardianName String?
  guardianPhone String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("studentProfiles")
}

model TeacherProfile {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @unique @db.ObjectId
  employeeId    String?  @unique
  qualification String?
  specialization String?
  bio           String?
  experience    Int?     @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  courses   Course[]

  @@map("teacherProfiles")
}

model Course {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  titleBn     String?     // Bangla title
  slug        String      @unique
  description String
  descriptionBn String?   // Bangla description
  thumbnail   String?
  price       Float       @default(0)
  duration    Int         // Duration in days
  courseType  CourseType  @default(ONLINE)
  courseClass CourseClass @default(OTHER) // Class filter
  priceType   PriceType   @default(PAID) // Paid or Free
  features    String[]    // List of features/benefits
  level       String?     // Beginner, Intermediate, Advanced
  status      String      @default("draft") // draft, published, archived
  order       Int         @default(0) // For sorting/ordering
  teacherId   String      @db.ObjectId
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  teacher     TeacherProfile @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  enrollments Enrollment[]
  assignments Assignment[]
  content     CourseContent[]

  @@index([teacherId])
  @@index([status])
  @@index([courseClass])
  @@index([courseType])
  @@index([priceType])
  @@index([order])
  @@map("courses")
}

model CourseContent {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  courseId    String   @db.ObjectId
  title       String
  type        String   // video, pdf, assignment, quiz
  contentUrl  String?
  description String?
  order       Int      @default(0)
  duration    Int?     // For videos in minutes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId])
  @@map("courseContents")
}

model Enrollment {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  studentId String           @db.ObjectId
  courseId  String           @db.ObjectId
  status    EnrollmentStatus @default(ACTIVE)
  enrolledAt DateTime        @default(now())
  completedAt DateTime?
  progress  Int              @default(0) // 0-100 percentage
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  student   User            @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course    Course          @relation(fields: [courseId], references: [id], onDelete: Cascade)
  payment   Payment?

  @@unique([studentId, courseId])
  @@index([studentId])
  @@index([courseId])
  @@index([status])
  @@map("enrollments")
}

model Payment {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  userId        String        @db.ObjectId
  enrollmentId  String?       @unique @db.ObjectId
  amount        Float
  method        PaymentMethod
  status        PaymentStatus @default(PENDING)
  transactionId String?       @unique
  bKashTrxId    String?
  rocketTrxId   String?
  cardLast4     String?
  metadata      Json?         // Additional payment data
  paidAt        DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  enrollment Enrollment? @relation(fields: [enrollmentId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("payments")
}

model Assignment {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  courseId    String   @db.ObjectId
  title       String
  description String
  dueDate     DateTime
  maxScore    Int      @default(100)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  submissions AssignmentSubmission[]

  @@index([courseId])
  @@index([dueDate])
  @@map("assignments")
}

model AssignmentSubmission {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  assignmentId String   @db.ObjectId
  studentId    String   @db.ObjectId
  content      String?
  fileUrl      String?
  score        Int?
  feedback     String?
  submittedAt  DateTime @default(now())
  gradedAt     DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  @@unique([assignmentId, studentId])
  @@index([studentId])
  @@index([assignmentId])
  @@map("assignmentSubmissions")
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  senderId  String   @db.ObjectId
  receiverId String   @db.ObjectId
  subject   String?
  content   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sender    User     @relation("SenderMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver  User     @relation("ReceiverMessages", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([senderId])
  @@index([receiverId])
  @@index([read])
  @@index([createdAt])
  @@map("messages")
}

model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  titleBn     String?
  slug        String   @unique
  content     String
  contentBn   String?
  excerpt     String?
  excerptBn   String?
  image       String?
  author      String
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([published])
  @@index([publishedAt])
  @@map("blogs")
}

model Notice {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  titleBn     String?
  content     String
  contentBn   String?
  priority    String   @default("normal") // low, normal, high, urgent
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([published])
  @@index([priority])
  @@index([publishedAt])
  @@map("notices")
}

model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  title     String
  message   String
  type      String   // info, success, warning, error
  read      Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@map("notifications")
}

model SiteSettings {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  key       String   @unique
  value     Json
  updatedAt DateTime @updatedAt

  @@map("siteSettings")
}

